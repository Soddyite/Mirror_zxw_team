<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp">

    <TextView
        android:id="@+id/add_address_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="添加地址"
        android:textColor="#000000"
        android:textSize="36px" />

    <ImageView
        android:id="@+id/add_address_exit_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="#000000"
        android:src="@mipmap/chahao" />

    <ImageView
        android:id="@+id/add_address_black_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/add_address_tv"
        android:layout_marginTop="10dp"
        android:scaleType="fitXY"
        android:src="@mipmap/black_horizontal" />

    <TextView
        android:id="@+id/receiver_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/add_address_black_line"
        android:layout_marginTop="20dp"
        android:text="添加收件人姓名"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/input_name_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/receiver_name_tv"
        android:layout_marginTop="10dp"
        android:background="@drawable/signup_shape"
        android:hint="请输入姓名"
        android:padding="10dp" />

    <TextView
        android:id="@+id/add_num_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/input_name_et"
        android:layout_marginTop="20dp"
        android:text="添加联系人电话号码"
        android:textColor="#000000"
        />

    <EditText
        android:id="@+id/input_num_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/add_num_tv"
        android:layout_marginTop="10dp"
        android:background="@drawable/signup_shape"
        android:hint="请输入手机号码"
        android:padding="10dp"
        android:inputType="number"/>

    <TextView
        android:id="@+id/add_receive_address_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/input_num_et"
        android:layout_marginTop="20dp"
        android:text="添加收货地址"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/input_receive_address_et"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_below="@id/add_receive_address_tv"
        android:layout_marginTop="10dp"
        android:background="@drawable/signup_shape"
        android:hint="请输入地址" />

    <Button
        android:id="@+id/commit_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/input_receive_address_et"
        android:layout_marginTop="30dp"
        android:background="@android:color/holo_red_light"
        android:text="提交地址"
        android:textColor="#ffffff" />
</RelativeLayout>