<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--佩戴效果 -->
    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/dress_result_title_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/dress_result_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:text="商品細節展示"
            android:textColor="#000000" />

        <ImageView
            android:id="@+id/dress_result_black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/dress_result_title"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:scaleType="fitXY"
            android:src="@mipmap/black_horizontal" />
    </com.zhy.autolayout.AutoRelativeLayout>

    <com.example.dllo.mirror.view.DressResultListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dress_result_title_rl"
        android:divider="@null"
        android:scrollbars="none" />
    <!-- android:scrollbars="none"
    设置滚动头条 不活动的时候隐藏，活动的时候也隐藏-->

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/buy_relativelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40px">

        <ImageView
            android:id="@+id/dress_result_exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40px"
            android:src="@mipmap/exit" />

        <ImageView
            android:id="@+id/dress_result_buy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="40px"
            android:src="@mipmap/buy" />
    </com.zhy.autolayout.AutoRelativeLayout>
</com.zhy.autolayout.AutoRelativeLayout>